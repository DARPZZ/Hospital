<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital.Views.ForgotPasswordPage"
             Title="ForgotPasswordPage">
    <StackLayout>
        <Label Text="Password reset"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               FontAttributes="Bold"
               FontSize="Title"
               Margin="0,5,0,0"
               />
        <Entry
            Margin="0,25,0,0"
            Placeholder="Enter youre email"
            WidthRequest="200"
            
            />
        <StackLayout>
            <Entry
                Margin="0,45,0,0"
                WidthRequest="200"
                Placeholder="Enter special code"/>
        </StackLayout>
                
        <StackLayout Margin="0,155,0,0">
            <Entry
                Placeholder="New password"
                WidthRequest="200"
                IsPassword="True"
                />
            <Button Text="Confirm" BackgroundColor="LightGreen" TextColor="White" FontAttributes="Bold" HeightRequest="50" CornerRadius="30" WidthRequest="200" Margin="0,25,0,0"/>
        </StackLayout>

    </StackLayout>
 
</ContentPage>