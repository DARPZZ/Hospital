<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital.Services.LoaderControl"
             x:Name="this">

    <ActivityIndicator IsRunning="True" Color="{Binding Source={x:Reference this}, Path=IndicatorColor}"/>
    <Label FontSize="25" FontAttributes="Bold" Text="{Binding Source={x:Reference this}, Path=LoadingText}" HorizontalTextAlignment="Center"/>
</StackLayout>
