<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Hospital.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Hospital.Views"
    
	xmlns:local="clr-namespace:Hospital">
	
	<ShellContent
		Shell.NavBarIsVisible="False"
		Title="Main"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
    <ShellContent
		Shell.NavBarIsVisible="False"
		Title="Forgot password"
		ContentTemplate="{DataTemplate views:ForgotPasswordPage}"
		Route="ForgotPasswordPage" />
    <ShellContent
		Shell.NavBarIsVisible="False"
		Title="Signup"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:SignupPage}"
		Route="SignupPage" />
	<ShellContent
		Shell.NavBarIsVisible="False"
		Title="Login"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:LoginnPage}"
		Route="LoginnPage" />
    <FlyoutItem >
	<ShellContent
		Shell.NavBarIsVisible="False"
		Title="Opening"
        Icon="preview2.png"
		ContentTemplate="{DataTemplate views:OpeningPage}"
        
		Route="OpeningPage" />
    <ShellContent
		Shell.NavBarIsVisible="False"
		Title="QR" 
        Icon="preview.png"
		ContentTemplate="{DataTemplate views:QrPage}"
		Route="QrPage" />
    </FlyoutItem>
</Shell>
