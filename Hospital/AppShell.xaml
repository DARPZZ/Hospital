<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Hospital.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Hospital.Views"
    Shell.BackgroundColor="LightBlue"
    
	xmlns:local="clr-namespace:Hospital">
	
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Signup"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:SignupPage}"
		Route="SignupPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Login"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:LoginnPage}"
		Route="LoginnPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Opening"
		Icon="avatar.png"
		ContentTemplate="{DataTemplate views:OpeningPage}"
		Route="OpeningPage" />
</Shell>
